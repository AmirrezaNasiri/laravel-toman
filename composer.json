{
    "name": "amirrezanasiri/laravel-toman",
    "description": ":description",
    "license": "license",
    "authors": [
        {
            "name": "Amirreza Nasiri",
            "email": "nasiri.amirreza.96@gmail.com",
            "homepage": "https://amirreza.in"
        }
    ],
    "homepage": "https://github.com/amirrezanasiri/laravel-toman",
    "keywords": ["Laravel", "LaravelToman"],
    "require": {
        "illuminate/support": "~5",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "mockery/mockery": "^1.1",
        "orchestra/testbench": "~3.8.0|^4.0",
        "sempro/phpunit-pretty-print": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "AmirrezaNasiri\\LaravelToman\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AmirrezaNasiri\\LaravelToman\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AmirrezaNasiri\\LaravelToman\\LaravelTomanServiceProvider"
            ],
            "aliases": {
                "Payment": "AmirrezaNasiri\\LaravelToman\\Facades\\Payment"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --exclude-group external",
        "test-coverage": "vendor/bin/phpunit --exclude-group external --coverage-clover=coverage.xml",
        "test-dev": "vendor/bin/phpunit --configuration=phpunit.xml --coverage-html=coverage --coverage-text"
    }
}
